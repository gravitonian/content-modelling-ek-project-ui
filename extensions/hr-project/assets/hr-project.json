              "cm:versionable",
              "cm:auditable",
              "cm:thumbnailModification",
              "cm:content",
              "cm:author",
              "cm:titled",
              "cm:generalclassifiable",
              "cm:taggable",
              "dp:restrictable",
              "fm:commentsRollup",
              "qshare:shared",
              "exif:exif",
              "iptcxmp:iptcxmpAspect",
              "cm:effectivity",
              "cm:likesRatingSchemeRollups",
              "cm:lockable",
              "cm:ownable",
              "hr:employeeHandbook",
              "hr:hrPolicyDocument",
              "hr:hrForm",
              "hr:trainingGuide"
